<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DependentLayout
        ohos:id="$+id:dep_welocme"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:background_element="$color:btnBg">
    <Text
        ohos:id="$+id:text_welcome"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="$string:welcome"
        ohos:text_color="$color:white"
        ohos:text_size="$float:dimens_30"
        ohos:text_weight="1000"
        ohos:multiple_lines="true"
        ohos:text_alignment="center"
        ohos:center_in_parent="true"/>
    </DependentLayout>
    <Text
        ohos:id="$+id:text_heading"
        ohos:height="$float:dimens_50"
        ohos:width="match_parent"
        ohos:text="$string:food_menu"
        ohos:background_element="$graphic:background_btn"
        ohos:text_color="$color:white"
        ohos:text_size="$float:dimens_20fp"
        ohos:text_weight="1000"
        ohos:text_alignment="center"
        ohos:horizontal_center="true"
        ohos:left_margin="$float:dimens_5"
        ohos:left_padding="$float:dimens_5"
        ohos:right_padding="$float:dimens_5"
        ohos:top_padding="$float:dimens_5"
        ohos:right_margin="$float:dimens_5"
        ohos:top_margin="$float:dimens_10"
        ohos:bottom_padding="$float:dimens_5"
        ohos:visibility="hide"
        />

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:below="$id:text_heading"
        ohos:top_margin="$float:dimens_10">

        <ListContainer
            ohos:id="$+id:list_container"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:below="$id:text_heading"
            ohos:layout_alignment="horizontal_center"
            />
    </DependentLayout>
    <Button
        ohos:id="$+id:btn_viewcart"
        ohos:height="$float:dimens_50"
        ohos:width="match_parent"
        ohos:text="$string:selected_foods"
        ohos:background_element="$graphic:roundedcorner_btn"
        ohos:text_color="$color:white"
        ohos:text_size="$float:dimens_20fp"
        ohos:text_weight="1000"
        ohos:text_alignment="center"
        ohos:horizontal_center="true"
        ohos:align_parent_bottom="true"
        ohos:left_margin="$float:dimens_5"
        ohos:left_padding="$float:dimens_5"
        ohos:right_padding="$float:dimens_5"
        ohos:top_padding="$float:dimens_5"
        ohos:right_margin="$float:dimens_5"
        ohos:bottom_padding="$float:dimens_5"
        ohos:bottom_margin="$float:dimens_20"
        ohos:visibility="hide"
        />
</DependentLayout>