<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:background_element="$graphic:background_box"
    ohos:margin="$float:dimens_10"
   >

    <DependentLayout
        ohos:id="$+id:layout_table_details"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:align_parent_left="true"
        ohos:left_margin="$float:dimens_15"
        ohos:top_margin="$float:dimens_10">
        <Text
            ohos:id="$+id:table_no_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="$string:table"
            ohos:text_weight="1000"
            ohos:text_color="$color:black"
            ohos:text_size="14vp"
            ohos:text_alignment="left"
            />

        <Text
            ohos:id="$+id:username_text"
            ohos:below="$id:table_no_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="$string:username"
            ohos:text_weight="700"
            ohos:text_color="$color:black"
            ohos:text_size="14vp"
            ohos:text_alignment="left"
            ohos:top_margin="$float:dimens_10"
            />
        <Text
            ohos:id="$+id:status_text"
            ohos:below="$id:username_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="$string:status"
            ohos:text_weight="500"
            ohos:text_color="$color:black"
            ohos:text_size="14vp"
            ohos:text_alignment="left"
            ohos:top_margin="$float:dimens_10"
            ohos:bottom_margin="$float:dimens_10"
            />
    </DependentLayout>

    <DependentLayout
        ohos:id="$+id:layout_view"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:center_in_parent="true"
        ohos:right_margin="$float:dimens_10"
        ohos:left_of="$id:layout_positive"
        ohos:background_element="$graphic:background_btn_outer_black"
        >
        <com.andexert.library.RippleView
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:rv_color="$color:black"
            >
            <Button
                ohos:id="$+id:btn_view"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="View"
                ohos:text_color="$color:black"
                ohos:text_size="14fp"
                ohos:text_weight="1000"
                ohos:padding="$float:dimens_5"
                />
        </com.andexert.library.RippleView>
    </DependentLayout>


    <DependentLayout
        ohos:id="$+id:layout_positive"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:center_in_parent="true"
        ohos:right_margin="$float:dimens_10"
        ohos:left_of="$id:layout_negative"
        ohos:background_element="$graphic:background_btn_outer_positive"
        >
        <com.andexert.library.RippleView
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:rv_color="$color:btnBg"
            >
        <Button
            ohos:id="$+id:btn_positive"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="Accept"
            ohos:text_color="$color:white"
            ohos:text_size="14fp"
            ohos:text_weight="1000"
            ohos:padding="$float:dimens_5"
            />
        </com.andexert.library.RippleView>
    </DependentLayout>

    <DependentLayout
        ohos:id="$+id:layout_negative"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:center_in_parent="true"
        ohos:right_margin="$float:dimens_15"
        ohos:align_parent_right="true"
        ohos:background_element="$graphic:background_btn_outer_negative"
        >
        <com.andexert.library.RippleView
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:rv_color="$color:grey"
            >
        <Button
            ohos:id="$+id:btn_negative"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="Cancel"
            ohos:text_color="$color:black"
            ohos:text_size="14fp"
            ohos:text_weight="1000"
            ohos:padding="$float:dimens_5"
            />
        </com.andexert.library.RippleView>
    </DependentLayout>

</DependentLayout>