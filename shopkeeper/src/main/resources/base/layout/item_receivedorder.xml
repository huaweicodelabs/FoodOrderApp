<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="$float:dimens_75"
    ohos:width="match_parent"
    ohos:background_element="$graphic:background_box"
    ohos:left_margin="$float:dimens_30"
    ohos:orientation="vertical"
    ohos:padding="$float:dimens_5"
    ohos:right_margin="$float:dimens_20"
    ohos:top_margin="$float:dimens_10">

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:layout_alignment="horizontal_center">

        <Image
            ohos:id="$+id:image_food"
            ohos:height="$float:dimens_50"
            ohos:width="$float:dimens_50"
            ohos:align_parent_left="true"
            ohos:image_src="$media:food"
            ohos:top_margin="$float:dimens_10"
            ohos:visibility="visible"
            />

        <Text
            ohos:id="$+id:item_title"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:horizontal_center="true"
            ohos:left_margin="$float:dimens_10"
            ohos:padding="$float:dimens_2"
            ohos:right_of="$id:image_food"
            ohos:text="$string:item_one"
            ohos:text_color="$color:black"
            ohos:text_size="$float:dimens_15fp"
            ohos:text_weight="600"
            ohos:top_margin="$float:dimens_5"
            />

        <Text
            ohos:id="$+id:item_prize"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:below="$id:item_title"
            ohos:horizontal_center="true"
            ohos:left_margin="$float:dimens_10"
            ohos:padding="$float:dimens_2"
            ohos:right_of="$id:image_food"
            ohos:text_color="$color:black"
            ohos:text_size="$float:dimens_15fp"
            ohos:text_weight="600"
            ohos:top_margin="$float:dimens_5"
            />
        <Text
            ohos:id="$+id:item_minus"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:below="$id:item_title"
            ohos:horizontal_center="true"
            ohos:left_margin="$float:dimens_20"
            ohos:padding="$float:dimens_2"
            ohos:right_of="$id:item_prize"
            ohos:text="$string:minus"
            ohos:text_color="$color:red"
            ohos:text_size="$float:dimens_15fp"
            ohos:text_weight="600"
            ohos:top_margin="$float:dimens_5"
            />

        <Text
            ohos:id="$+id:item_quantity"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:below="$id:item_title"
            ohos:horizontal_center="true"

            ohos:left_margin="5vp"
            ohos:right_of="$id:item_minus"
            ohos:text="$string:zero"
            ohos:text_color="$color:red"
            ohos:text_size="$float:dimens_15"
            ohos:text_weight="600"
            ohos:top_margin="$float:dimens_5"
            />

        <Text
            ohos:id="$+id:item_plus"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:below="$id:item_title"
            ohos:horizontal_center="true"
            ohos:left_margin="$float:dimens_5"
            ohos:padding="$float:dimens_2"
            ohos:right_of="$id:item_quantity"
            ohos:text="$string:plus"
            ohos:text_color="$color:red"
            ohos:text_size="$float:dimens_15fp"
            ohos:text_weight="600"
            ohos:top_margin="$float:dimens_5"
            />
    </DependentLayout>

</DirectionalLayout>