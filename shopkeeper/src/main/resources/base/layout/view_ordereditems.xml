<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text_heading"
        ohos:height="$float:dimens_50"
        ohos:width="match_parent"
        ohos:text="$string:view_ordered_items"
        ohos:background_element="$graphic:background_btn"
        ohos:text_color="$color:white"
        ohos:text_size="$float:dimens_15"
        ohos:text_weight="1000"
        ohos:text_alignment="center"
        ohos:horizontal_center="true"
        />

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:below="$id:text_heading"
        ohos:above="$id:btn_accept_order"
        ohos:top_margin="$float:dimens_5"
        ohos:bottom_margin="$float:dimens_5">

        <ListContainer
            ohos:id="$+id:list_container_cart"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:below="$id:text_heading"
            ohos:layout_alignment="horizontal_center"
            />
    </DependentLayout>
    <Button
        ohos:id="$+id:btn_accept_order"
        ohos:height="$float:dimens_50"
        ohos:width="match_parent"
        ohos:text="$string:accept_order"
        ohos:background_element="$graphic:roundedcorner_btn"
        ohos:text_color="$color:white"
        ohos:text_size="$float:dimens_20fp"
        ohos:text_weight="1000"
        ohos:text_alignment="center"
        ohos:horizontal_center="true"
        ohos:align_parent_bottom="true"
        ohos:left_margin="$float:dimens_5"
        ohos:left_padding="$float:dimens_5"
        ohos:right_padding="$float:dimens_5"
        ohos:top_padding="$float:dimens_5"
        ohos:right_margin="$float:dimens_5"
        ohos:bottom_padding="$float:dimens_5"
        ohos:bottom_margin="$float:dimens_20"

        />
    <Button
        ohos:id="$+id:btn_ready_delivery"
        ohos:height="$float:dimens_50"
        ohos:width="match_parent"
        ohos:text="$string:ready_deliver"
        ohos:background_element="$graphic:roundedcorner_btn"
        ohos:text_color="$color:white"
        ohos:text_size="$float:dimens_20fp"
        ohos:text_weight="1000"
        ohos:text_alignment="center"
        ohos:horizontal_center="true"
        ohos:align_parent_bottom="true"
        ohos:left_margin="$float:dimens_5"
        ohos:left_padding="$float:dimens_5"
        ohos:right_padding="$float:dimens_5"
        ohos:top_padding="$float:dimens_5"
        ohos:right_margin="$float:dimens_5"
        ohos:bottom_padding="$float:dimens_5"
        ohos:bottom_margin="$float:dimens_20"
        ohos:visibility="hide"

        />
</DependentLayout>