<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$color:whiteTransparent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:id="$+id:tab_layout"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="bottom"
        ohos:padding="10vp"
        ohos:align_parent_top="true"
        ohos:background_element="$color:btnBg"
        ohos:orientation="horizontal">

        <DirectionalLayout
            ohos:id="$+id:layout_pending"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:margin="5vp"
            ohos:top_padding="$float:dimens_5"
            ohos:bottom_padding="$float:dimens_5"
            ohos:alignment="center"
            ohos:orientation="horizontal"
            ohos:layout_alignment="center"
           >
            <Button
                ohos:id="$+id:pending_button"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="14fp"
                ohos:text_color="$color:white"
                ohos:text_weight="500"
                ohos:text="$string:pending"
                ohos:text_font="sans-serif"
                />
            <Text
                ohos:id="$+id:pending_count_text"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="0"
                ohos:text_size="14fp"
                ohos:text_color="$color:white"
                ohos:text_weight="500"
                ohos:text_font="sans-serif"
                />
        </DirectionalLayout>

        <DirectionalLayout
            ohos:id="$+id:layout_waiting"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:margin="5vp"
            ohos:top_padding="$float:dimens_5"
            ohos:bottom_padding="$float:dimens_5"
            ohos:alignment="center"
            ohos:orientation="horizontal"
            ohos:layout_alignment="center"
            >
            <Button
                ohos:id="$+id:waiting_button"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="14fp"
                ohos:text_color="$color:black"
                ohos:text_weight="500"
                ohos:text="$string:waiting"
                ohos:text_font="sans-serif"
                />
            <Text
                ohos:id="$+id:waiting_count_text"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="0"
                ohos:text_size="14fp"
                ohos:text_color="$color:black"
                ohos:text_weight="500"
                ohos:text_font="sans-serif"
                />
        </DirectionalLayout>


        <DirectionalLayout
            ohos:id="$+id:layout_delivered"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:margin="5vp"
            ohos:top_padding="$float:dimens_5"
            ohos:bottom_padding="$float:dimens_5"
            ohos:alignment="center"
            ohos:orientation="horizontal"
            ohos:layout_alignment="center"
            >
            <Button
                ohos:id="$+id:delivered_button"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="14fp"
                ohos:text_color="$color:black"
                ohos:text_weight="500"
                ohos:text="$string:delivered"
                ohos:text_font="sans-serif"
                />
            <Text
                ohos:id="$+id:delivered_count_text"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="0"
                ohos:text_size="14fp"
                ohos:text_color="$color:black"
                ohos:text_weight="500"
                ohos:text_font="sans-serif"
                />
        </DirectionalLayout>

    </DirectionalLayout>

    <ListContainer
        ohos:id="$+id:dashboard_list_container"
        ohos:below="$id:tab_layout"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:weight="1"
        ohos:rebound_effect="true"
        ohos:margin="$float:dimens_5"
        />

</DependentLayout>