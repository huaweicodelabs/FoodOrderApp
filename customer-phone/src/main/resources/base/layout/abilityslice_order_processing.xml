<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Text
        ohos:id="$+id:text_heading"
        ohos:height="$float:dimens_50"
        ohos:width="match_parent"
        ohos:text="$string:order_confirm"
        ohos:background_element="$graphic:background_btn"
        ohos:text_color="$color:white"
        ohos:text_size="$float:dimens_18fp"
        ohos:text_weight="1000"
        ohos:text_alignment="center"
        ohos:horizontal_center="true"
        />
    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="vertical"
        ohos:margin="$float:dimens_10"
        ohos:center_in_parent="true"
        >
        <com.airbnb.lottie.LottieAnimationView
            ohos:id="$+id:animationView"
            ohos:width="match_parent"
            ohos:height="$float:dimens_200"
            ohos:horizontal_center="true"
            ohos:bottom_margin="$float:dimens_30"
            />

        <Text
            ohos:id="$+id:text_content"
            ohos:below="$id:animationView"
            ohos:height="$float:dimens_45"
            ohos:width="match_parent"
            ohos:text="$string:waiting_time"
            ohos:multiple_lines="true"
            ohos:text_color="$color:black"
            ohos:text_size="$float:dimens_18fp"
            ohos:text_weight="1000"
            ohos:text_alignment="center"
            ohos:center_in_parent="true"
            />
    </DependentLayout>
</DependentLayout>