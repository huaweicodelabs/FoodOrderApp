<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text_heading"
        ohos:height="$float:dimens_50"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_btn"
        ohos:horizontal_center="true"
        ohos:text="$string:food_items"
        ohos:text_alignment="center"
        ohos:text_color="$color:white"
        ohos:text_size="$float:dimens_18fp"
        ohos:text_weight="1000"
        />

    <Text
        ohos:id="$+id:text_totalitemsprize"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:below="$id:text_heading"
        ohos:horizontal_center="true"
        ohos:text_color="$color:black"
        ohos:text_size="$float:dimens_15fp"
        ohos:text_weight="1000"
        ohos:top_padding="$float:dimens_10"/>

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:text_totalitemsprize"
        ohos:above="$id:ripple_continue"
        ohos:top_margin="$float:dimens_10"
        ohos:bottom_margin="$float:dimens_10">

        <ListContainer
            ohos:id="$+id:list_container_cart"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:layout_alignment="horizontal_center"

            />
    </DependentLayout>

    <com.andexert.library.RippleView
        ohos:id="$+id:ripple_continue"
        ohos:height="$float:dimens_50"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:rv_color="$color:btnBg">

        <Button
            ohos:id="$+id:btn_confrim_orderfood"
            ohos:height="$float:dimens_50"
            ohos:width="match_parent"
            ohos:align_parent_bottom="true"
            ohos:background_element="$graphic:background_btn"
            ohos:bottom_padding="$float:dimens_5"
            ohos:horizontal_center="true"
            ohos:text="$string:confirm"
            ohos:text_alignment="center"
            ohos:text_color="$color:white"
            ohos:text_size="$float:dimens_15fp"
            ohos:text_weight="1000"/>
    </com.andexert.library.RippleView>

    <include
        ohos:id="$+id:loading_img_content"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:layout="$layout:layout_progressbar"
        ohos:center_in_parent="true"
        ohos:visibility="hide"/>

</DependentLayout>