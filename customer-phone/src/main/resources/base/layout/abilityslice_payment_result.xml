<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Text
        ohos:id="$+id:txt_title"
        ohos:height="$float:dimens_50"
        ohos:width="match_parent"
        ohos:text="$string:payment"
        ohos:background_element="$graphic:background_btn"
        ohos:text_color="$color:white"
        ohos:text_size="$float:dimens_18fp"
        ohos:text_weight="1000"
        ohos:text_alignment="center"
        ohos:horizontal_center="true"
        />
    <DirectionalLayout
        ohos:id="$+id:layout_logout"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:background_element="$color:white"
        ohos:orientation="vertical"
        ohos:weight="0.25"
        ohos:bottom_margin="$float:dimens_10">
<!--
        <Image
            ohos:id="$+id:imagecomponent"
            ohos:height="$float:dimens_60"
            ohos:width="$float:dimens_60"
            ohos:background_element="$media:checkicon"
            />
-->
        <com.airbnb.lottie.LottieAnimationView
            ohos:id="$+id:animationView_Success"
            ohos:width="match_parent"
            ohos:height="$float:dimens_200"
            ohos:horizontal_center="true"
            />

        <Text
            ohos:id="$+id:amount"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="$float:dimens_10"
            ohos:multiple_lines="true"
            ohos:right_margin="$float:dimens_10"
            ohos:text="$string:inr_500"
            ohos:text_alignment="center"
            ohos:text_color="$color:colorSecondaryDark"
            ohos:text_font="serif"
            ohos:text_size="$float:dimens_25fp"
            ohos:text_weight="1000"
            />
        <Text
            ohos:id="$+id:order_accept_status"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="$float:dimens_10"
            ohos:multiple_lines="true"
            ohos:right_margin="$float:dimens_10"
            ohos:text="$string:payment_successful"
            ohos:text_alignment="center"
            ohos:text_color="$color:black"
            ohos:text_font="serif"
            ohos:text_size="$float:dimens_18fp"
            ohos:text_weight="500"
            ohos:top_margin="$float:dimens_15"
            />
        <Text
            ohos:id="$+id:text_counter"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="$float:dimens_10"
            ohos:multiple_lines="true"
            ohos:right_margin="$float:dimens_10"
            ohos:text="$string:thanks_visit"
            ohos:text_alignment="center"
            ohos:text_color="$color:red"
            ohos:text_font="serif"
            ohos:text_size="$float:dimens_22fp"
            ohos:text_weight="800"
            ohos:top_margin="$float:dimens_15"
            />

        <com.andexert.library.RippleView
            ohos:id="$+id:ripple_continue"
            ohos:height="$float:dimens_50"
            ohos:width="$float:dimens_150"
            ohos:background_element="$graphic:roundedcorner_btn"
            ohos:rv_color="$color:grey"
            ohos:top_margin="$float:dimens_40"
            ohos:bottom_margin="$float:dimens_30"
            >
        <Button
            ohos:id="$+id:btnexit"
            ohos:height="$float:dimens_50"
            ohos:width="$float:dimens_150"
            ohos:background_element="$graphic:roundedcorner_btn"
            ohos:selection_color="$color:btnBg"
            ohos:text_alignment="center"
            ohos:text="$string:exit"
            ohos:text_color="$color:white"
            ohos:text_font="serif"
            ohos:text_size="$float:dimens_20fp"
            ohos:text_weight="1000"
            />
        </com.andexert.library.RippleView>


    </DirectionalLayout>
</DirectionalLayout>