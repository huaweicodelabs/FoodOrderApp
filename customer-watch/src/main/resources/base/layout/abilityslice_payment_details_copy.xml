<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text_heading"
        ohos:height="$float:dimens_40"
        ohos:width="match_parent"
        ohos:text="$string:payment_details"
        ohos:background_element="$graphic:background_btn"
        ohos:text_color="$color:white"
        ohos:text_size="$float:dimens_15fp"
        ohos:text_weight="1000"
        ohos:text_alignment="center"
        ohos:horizontal_center="true"
        ohos:left_margin="$float:dimens_10"
        ohos:right_margin="$float:dimens_10"
        />

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:below="$id:text_heading"
        ohos:top_margin="$float:dimens_5">

        <ListContainer
            ohos:id="$+id:list_container_cart"
            ohos:height="120vp"
            ohos:width="match_parent"
            ohos:layout_alignment="horizontal_center"
            ohos:background_element="$color:black"/>
    </DependentLayout>

</DependentLayout>