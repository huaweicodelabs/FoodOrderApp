<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:id="$+id:layout_heading"
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:orientation="horizontal">
        <Text
            ohos:id="$+id:text_heading"
            ohos:height="$float:dimens_40"
            ohos:width="match_parent"
            ohos:text="$string:FoodMenus"
            ohos:background_element="$graphic:background_add_btn"
            ohos:text_color="$color:white"
            ohos:text_size="15fp"
            ohos:text_weight="1000"
            ohos:text_alignment="center"
            ohos:horizontal_center="true"
            ohos:left_padding="$float:dimens_5"
            ohos:right_padding="$float:dimens_20"
            ohos:top_padding="$float:dimens_5"
            ohos:align_parent_left="true"
            />
    </DependentLayout>
    <Image
        ohos:id="$+id:cancel"
        ohos:height="$float:dimens_22"
        ohos:width="$float:dimens_22"
        ohos:text="$string:cancel"
        ohos:background_element="$media:ic_cancel_round"
        ohos:horizontal_center="true"
        ohos:align_parent_end="true"
        ohos:top_padding="$float:dimens_8"
        ohos:top_margin="$float:dimens_15"
        ohos:right_margin="$float:dimens_53"/>

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:below="$id:cancel"
        ohos:above="$id:btn_Order_now"
        ohos:top_margin="$float:dimens_10">

        <ListContainer
            ohos:id="$+id:list_container"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:below="$id:cancel"
            ohos:layout_alignment="horizontal_center"
            />
    </DependentLayout>
    <com.andexert.library.RippleView
        ohos:height="$float:dimens_40"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:rv_color="$color:btnBg">
    <Button
        ohos:id="$+id:btn_Order_now"
        ohos:height="$float:dimens_40"
        ohos:width="match_parent"
        ohos:text="$string:OrderNow"
        ohos:background_element="$graphic:background_btn"
        ohos:text_color="$color:white"
        ohos:text_size="14fp"
        ohos:text_weight="1000"
        ohos:text_alignment="center"
        ohos:align_parent_bottom="true"
        ohos:horizontal_center="true"
        ohos:left_margin="$float:dimens_5"
        ohos:left_padding="$float:dimens_5"
        ohos:right_padding="$float:dimens_5"
        ohos:top_padding="$float:dimens_5"
        ohos:right_margin="$float:dimens_5"
        />
    </com.andexert.library.RippleView>
</DependentLayout>