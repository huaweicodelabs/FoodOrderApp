<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:alignment="center">

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:alpha="1.1"
        ohos:background_element="$color:transparent"
        >
        <Image
            ohos:id="$+id:imgLoading"
            ohos:height="$float:dimens_50"
            ohos:width="$float:dimens_50"
            ohos:background_element="$media:ic_progressindicator"/>
        <Text
            ohos:id="$+id:txt_title"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="Please Wait..."
            ohos:text_size="$float:dimens_10"
            ohos:text_weight="1000"
            ohos:text_color="$color:white"
            ohos:text_alignment="center"
            ohos:multiple_lines="true"
            ohos:left_margin="$float:dimens_20"
            ohos:right_margin="$float:dimens_20"
            ohos:top_margin="$float:dimens_20"
            ohos:background_element="$color:btnBg"
            />
    </DirectionalLayout>

</DirectionalLayout>