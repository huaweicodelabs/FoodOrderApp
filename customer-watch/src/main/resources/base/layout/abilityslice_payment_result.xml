<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Text
        ohos:id="$+id:txt_title"
        ohos:height="$float:dimens_45"
        ohos:width="match_parent"
        ohos:text="$string:payment"
        ohos:background_element="$graphic:background_btn"
        ohos:text_color="$color:white"
        ohos:text_size="12fp"
        ohos:text_weight="1000"
        ohos:text_alignment="center"
        ohos:horizontal_center="true"
        ohos:left_margin="$float:dimens_10"
        ohos:top_padding="$float:dimens_8"
        ohos:right_margin="$float:dimens_10"
        ohos:bottom_padding="$float:dimens_5"
        />
    <DirectionalLayout
        ohos:id="$+id:layout_logout"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:background_element="$color:white"
        ohos:orientation="vertical"
        ohos:weight="0.25"
        ohos:bottom_margin="$float:dimens_10">
<!--
        <Image
            ohos:id="$+id:imagecomponent"
            ohos:height="30vp"
            ohos:width="30vp"
            ohos:background_element="$media:checkicon"
            />
-->
        <com.airbnb.lottie.LottieAnimationView
            ohos:id="$+id:animationView_Success"
            ohos:width="$float:dimens_100"
            ohos:height="$float:dimens_100"
            ohos:horizontal_center="true"
            />
        <Text
            ohos:id="$+id:amount"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="$float:dimens_10"
            ohos:multiple_lines="true"
            ohos:right_margin="$float:dimens_10"
            ohos:text="Rs 500"
            ohos:text_alignment="center"
            ohos:text_color="$color:colorSecondaryDark"
            ohos:text_font="serif"
            ohos:text_size="18fp"
            ohos:text_weight="1000"
            ohos:top_margin="$float:dimens_5"
            ohos:visibility="visible"
            />
        <Text
            ohos:id="$+id:order_accept_status"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="$float:dimens_10"
            ohos:multiple_lines="true"
            ohos:right_margin="$float:dimens_10"
            ohos:text="$string:payment_successful"
            ohos:text_alignment="center"
            ohos:text_color="$color:black"
            ohos:text_font="serif"
            ohos:text_size="10fp"
            ohos:text_weight="500"
            ohos:top_margin="$float:dimens_5"
            />
        <Text
            ohos:id="$+id:text_counter"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="$float:dimens_10"
            ohos:multiple_lines="true"
            ohos:right_margin="$float:dimens_10"
            ohos:text="$string:thanks_visit"
            ohos:text_alignment="center"
            ohos:text_color="$color:red"
            ohos:text_font="serif"
            ohos:text_size="12fp"
            ohos:text_weight="800"
            ohos:top_margin="$float:dimens_5"
            />

        <Button
            ohos:id="$+id:btnexit"
            ohos:height="30vp"
            ohos:width="100vp"
            ohos:background_element="$graphic:background_btn"
            ohos:bottom_margin="30vp"
            ohos:selection_color="$color:btnBg"
            ohos:text="Exit"
            ohos:text_color="$color:white"
            ohos:text_font="serif"
            ohos:text_size="14fp"
            ohos:text_weight="1000"
            ohos:top_margin="$float:dimens_10"/>


    </DirectionalLayout>
</DirectionalLayout>