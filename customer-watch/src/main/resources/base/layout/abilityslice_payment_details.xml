<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text_heading"
        ohos:height="$float:dimens_40"
        ohos:width="match_parent"
        ohos:text="$string:payment_details"
        ohos:background_element="$graphic:background_btn"
        ohos:text_color="$color:white"
        ohos:text_size="$float:dimens_15fp"
        ohos:text_weight="1000"
        ohos:text_alignment="center"
        ohos:horizontal_center="true"
        ohos:align_parent_top="true"
        />
<ScrollView
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:below="$id:text_heading">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:below="$id:text_heading"
        ohos:orientation="vertical">
        <Text
            ohos:id="$+id:txt_header"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:top_margin="$float:dimens_20fp"
            ohos:below="$id:text_heading"
            ohos:text_size="$float:dimens_18fp"
            ohos:text_weight="600"
            ohos:horizontal_center="true"
            ohos:text="$string:payment_received_table"
            ohos:visibility="hide"/>
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$graphic:background_box"
            ohos:top_margin="$float:dimens_10">
        <ListContainer
            ohos:id="$+id:list_container_items"
            ohos:height="65vp"
            ohos:width="match_parent"
            ohos:layout_alignment="vertical_center"/>
        </DependentLayout>

        <DependentLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:top_margin="$float:dimens_10"
            ohos:left_margin="$float:dimens_15"
            ohos:right_margin="$float:dimens_15"
            ohos:visibility="visible">

            <Text
                ohos:id="$+id:tax"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:margin="$float:dimens_8"
                ohos:multiple_lines="true"
                ohos:text="$string:tax"
                ohos:align_parent_left="true"
                ohos:vertical_center="true"
                ohos:text_size="$float:dimens_15"/>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:margin="$float:dimens_8"
                ohos:text="$string:taxpercentage"
                ohos:center_in_parent="true"
                ohos:text_alignment="center"
                ohos:text_size="$float:dimens_15fp"/>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:margin="$float:dimens_8"
                ohos:text="$string:taxvalue"
                ohos:align_parent_right="true"
                ohos:vertical_center="true"
                ohos:text_alignment="center"
                ohos:text_size="$float:dimens_15fp"/>
        </DependentLayout>
        <DependentLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:left_margin="$float:dimens_15"
            ohos:right_margin="$float:dimens_15"
            ohos:visibility="visible">

            <Text
                ohos:id="$+id:gst"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:margin="$float:dimens_8"
                ohos:multiple_lines="true"
                ohos:text="$string:gst"
                ohos:align_parent_left="true"
                ohos:vertical_center="true"
                ohos:text_size="$float:dimens_15fp"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:margin="$float:dimens_8"
                ohos:text="$string:gstpercentage"
                ohos:center_in_parent="true"
                ohos:text_alignment="center"
                ohos:text_size="$float:dimens_15"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:margin="$float:dimens_8"
                ohos:text="$string:gstvalue"
                ohos:align_parent_right="true"
                ohos:vertical_center="true"
                ohos:text_alignment="center"
                ohos:text_size="$float:dimens_15fp"/>
        </DependentLayout>
        <DependentLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:left_margin="$float:dimens_15"
            ohos:right_margin="$float:dimens_15"
            ohos:visibility="visible">

            <Text
                ohos:id="$+id:Total"
                ohos:height="match_content"
                ohos:width="$float:dimens_100"
                ohos:margin="$float:dimens_8"
                ohos:multiple_lines="true"
                ohos:text="$string:delivery_charges"
                ohos:align_parent_left="true"
                ohos:vertical_center="true"
                ohos:text_size="$float:dimens_15fp"/>


            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:margin="$float:dimens_8"
                ohos:text="$string:deliverycharge"
                ohos:align_parent_right="true"
                ohos:vertical_center="true"
                ohos:text_alignment="center"
                ohos:text_size="$float:dimens_15fp"/>
        </DependentLayout>
        <Text
            ohos:height="$float:dimens_2"
            ohos:width="match_parent"
            ohos:background_element="$color:btnBg">

        </Text>
        <DependentLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:left_margin="$float:dimens_15"
            ohos:right_margin="$float:dimens_15"
            ohos:visibility="visible">
            <Text
                ohos:id="$+id:total"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:margin="$float:dimens_5"
                ohos:multiple_lines="true"
                ohos:text="$string:total"
                ohos:align_parent_left="true"
                ohos:vertical_center="true"
                ohos:text_weight="1000"
                ohos:text_size="$float:dimens_15fp"
                ohos:text_color="$color:btnBg"/>

            <Text
                ohos:id="$+id:totalvalue"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:margin="$float:dimens_5"
                ohos:text="$string:totalvalue"
                ohos:align_parent_right="true"
                ohos:vertical_center="true"
                ohos:text_alignment="center"
                ohos:text_size="$float:dimens_15fp"/>
        </DependentLayout>
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal"
            ohos:alignment="horizontal_center"
            ohos:left_margin="$float:dimens_15"
            ohos:right_margin="$float:dimens_15"
            ohos:visibility="visible">
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="$string:pay_orderagain"
            ohos:above="$id:layout_payororder"
            ohos:text_color="$color:black"
            ohos:text_size="$float:dimens_15fp"
            ohos:text_weight="1000"
            ohos:text_alignment="horizontal_center"
            ohos:multiple_lines="true"
            ohos:max_text_lines="2"
            ohos:top_margin="$float:dimens_5"/>
        </DependentLayout>
        <DirectionalLayout
            ohos:id="$+id:layout_payororder"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="vertical"
            ohos:alignment="center"
            ohos:top_margin="$float:dimens_5"
            ohos:visibility="visible">
            <com.andexert.library.RippleView
                ohos:height="$float:dimens_40"
                ohos:width="match_parent"
                ohos:align_parent_bottom="true"
                ohos:rv_color="$color:btnBg">
            <Button
                ohos:id="$+id:btnpay"
                ohos:height="match_content"
                ohos:width="$float:dimens_50"
                ohos:text="$string:pay"
                ohos:background_element="$graphic:background_btn"
                ohos:text_alignment="center"
                ohos:text_weight="1000"
                ohos:text_size="$float:dimens_15fp"
                ohos:text_color="$color:white"
                ohos:top_padding="$float:dimens_2"
                ohos:left_margin="$float:dimens_30"
                ohos:bottom_padding="$float:dimens_2"/>
            </com.andexert.library.RippleView>
            <com.andexert.library.RippleView
                ohos:height="$float:dimens_40"
                ohos:width="match_parent"
                ohos:align_parent_bottom="true"
                ohos:rv_color="$color:btnBg">
            <Button
                ohos:id="$+id:btnorderagain"
                ohos:height="match_content"
                ohos:width="$float:dimens_100"
                ohos:text="$string:orderagain"
                ohos:top_margin="$float:dimens_5"
                ohos:background_element="$graphic:background_btn"
                ohos:text_size="$float:dimens_15fp"
                ohos:text_color="$color:white"
                ohos:text_weight="1000"
                ohos:bottom_margin="$float:dimens_10"
                ohos:top_padding="$float:dimens_2"
                ohos:bottom_padding="$float:dimens_2"
                ohos:left_margin="$float:dimens_5"
                ohos:right_margin="$float:dimens_5"/>
            </com.andexert.library.RippleView>
        </DirectionalLayout>
</DirectionalLayout>
</ScrollView>
</DependentLayout>