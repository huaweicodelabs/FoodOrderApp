<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text_heading"
        ohos:height="$float:dimens_40"
        ohos:width="match_parent"
        ohos:text="$string:food_items"
        ohos:background_element="$graphic:background_btn"
        ohos:text_color="$color:white"
        ohos:text_size="$float:dimens_15fp"
        ohos:text_weight="1000"
        ohos:text_alignment="center"
        ohos:horizontal_center="true"
        ohos:left_margin="$float:dimens_10"
        ohos:right_margin="$float:dimens_10"
        />

    <Text
        ohos:id="$+id:text_totalitemsprize"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="$color:black"
        ohos:text="Total"
        ohos:below="$id:text_heading"
        ohos:text_size="$float:dimens_15fp"
        ohos:text_weight="1000"
        ohos:horizontal_center="true"
        ohos:left_margin="$float:dimens_5"
        ohos:right_margin="$float:dimens_5"
        ohos:visibility="visible"
        />

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:below="$id:text_totalitemsprize"
        ohos:top_margin="$float:dimens_5"
        ohos:above="$id:btn_confrim_orderfood">

        <ListContainer
            ohos:id="$+id:list_container_cart"
            ohos:height="120vp"
            ohos:width="match_parent"
            ohos:layout_alignment="horizontal_center"
            ohos:above="$id:btn_confrim_orderfood"
            />
    </DependentLayout>
    <com.andexert.library.RippleView
        ohos:id="$+id:ripple_continue"
        ohos:height="$float:dimens_40"
        ohos:width="match_parent"
        ohos:below="$id:list_container_cart"
        ohos:align_parent_bottom="true"
        ohos:rv_color="$color:btnBg">
    <Button
        ohos:id="$+id:btn_confrim_orderfood"
        ohos:height="$float:dimens_40"
        ohos:width="match_parent"
        ohos:below="$id:list_container_cart"
        ohos:text="$string:confirm"
        ohos:background_element="$graphic:background_btn"
        ohos:text_color="$color:white"
        ohos:text_size="$float:dimens_15fp"
        ohos:text_weight="1000"
        ohos:text_alignment="center"
        ohos:horizontal_center="true"
        ohos:align_parent_bottom="true"
        ohos:bottom_padding="$float:dimens_5"
        />
    </com.andexert.library.RippleView>
    <include
        ohos:id="$+id:loading_img_content"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:layout="$layout:layout_progressbar"
        ohos:center_in_parent="true"
        ohos:visibility="hide"/>
</DependentLayout>